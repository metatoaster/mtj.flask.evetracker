{% extends "layout_tidytablejs.jinja" %}

{% block container %}

      <div id="groups">

        <div id="group_overview">

        <table class="table table-bordered table-condensed">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>

          {% for group in groups %}
            <tr>
              <td>{{ group.name }}</td>
              <td>{{ group.description }}</td>
              <td>
                <div class="btn-group">
                  <a class="btn" href="edit/{{ group.name }}">Edit</a>
                  <a class="btn" href="show/{{ group.name }}">Users</a>
                </div>
              </td>
            </tr>
          {% endfor %}

          </tbody>
        </table>

        </div>
      </div>

{% endblock %}

{% block scriptvars %}
    elemsel = '#group_overview';
{% endblock %}
